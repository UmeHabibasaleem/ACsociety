@model IEnumerable<SocietyOfAC.upload_image>

@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<section>
    <div class="container" style="margin-top:80px">
        <h1 id="title-bar"><span>Events 2013-2014</span></h1>
        <div class="row">


            <div>
                <hr />
                <div class="news">

                    @foreach (upload_image img in @Model)
                    {

                        <a class="news-link" href="#" id="back">
                            <div class="media clearfix background-clouds color-black" data-control="class" data-class-prefix="media clearfix" id="padd" style="background-color:#DCDCDC">
                                @if (img.img_path != null)
                                {
                                    <div class="pull-left">
                                        <img src="@Url.Content(img.img_path)" style="width:450px;height:300px" />
                                        <br>
                                        <br>
                                    </div>
                                }
                                <div class="media-body">
                                    <h3 class="media-heading"></h3>
                                    <h1>@img.MainHeading</h1>
                                    <p><h4>@img.img_description</h4></p>
                                    <br><b>Date:  </b>@img.Date;
                                    <br><b>Time:  </b>@img.Time
                                    <br><b>Venue:  </b>@img.Venue
                                    <p>
                                        @Html.ActionLink("Edit", "Edit", new { id = img.id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = img.id })|
                                        @Html.ActionLink("Details", "Details", new { id = img.id })
                                    </p>


                                </div>
                            </div>
                        </a>
                        <br>
                        <br>
                    }
                </div>
            </div>
            <p>

            </p>
        </div>
    </div>
</section>



