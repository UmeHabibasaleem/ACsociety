@model IEnumerable<SocietyOfAC.Models.RequestClass>
@{
    ViewBag.Title = "Approvedmembership";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<style type="text/css">
       body {
        color: #404E67;
        background: #F5F7FA;
		font-family: 'Open Sans', sans-serif;
	}

        .table-wrapper {
            width: 700px;
            margin: 30px auto;
            background: #fff;
            padding: 20px;
            box-shadow: 0 1px 1px rgba(0,0,0,.05);
        }

        .table-title {
            padding-bottom: 10px;
            margin: 0 0 10px;
        }

            .table-title h2 {
                margin: 6px 0 0;
                font-size: 22px;
            }

        table.table {
            table-layout: fixed;
        }

            table.table tr th, table.table tr td {
                border-color: #e9e9e9;
            }

            table.table th i {
                font-size: 13px;
                margin: 0 5px;
                cursor: pointer;
                height: 15px;
                width: 15px;
            }

            table.table th:last-child {
                width: 100px;
            }

            table.table td a {
                cursor: pointer;
                display: inline-block;
                margin: 0 5px;
                min-width: 24px;
            }

        input[type="checkbox"] {
            width: 15px; /*Desired width*/
            height: 15px; /*Desired height*/
            vertical-align: middle;
            margin-left: 25px;
        }

        table.table td a.add i {
            font-size: 24px;
            margin-right: -1px;
            position: relative;
            top: 3px;
        }

        table.table .form-control {
            height: 32px;
            line-height: 32px;
            box-shadow: none;
            border-radius: 2px;
        }

            table.table .form-control.error {
                border-color: #f50000;
            }

        table.table td .add {
            display: none;
        }
       
    </style>

    <div class="container" style="margin-top:80px;">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8" id="col"><h2><b>Request Details</b></h2></div>

                </div>
            </div>
           @using (Html.BeginForm("Approvedmembership" , "MemberShip",FormMethod.Post))
           {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Request Details
                         </th>
                        <th>
                            Approval
                        </th>
                    </tr>
                </thead>
                <tbody>
                    societyofAC
                    @if (Model != null)
                    {
                      foreach (var item in Model)
                      {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegistrationNumber),
                                    @Html.DisplayFor(modelItem => item.Name),
                                    @Html.DisplayFor(modelItem => item.Email),
                                    @Html.DisplayFor(modelItem => item.Team) Team


                                </td>
                                <td>

                                    <input type="checkbox" name="tags" id="categorieOne" value="@item.RegistrationNumber" />
                                </td>
                            </tr>
                        }

                    }
                    else
                    {
                        <tr>
                            <td>
                                There is not any request


                            </td>
                            <td>

                               
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            <div><button type="submit" class="btn btn-default" id="butt" style="border-color:white">Submit</button></div>

           }
            @if (ViewBag.EmailSend != "")
            {
                <script type="text/javascript">
                window.onload = function () {
                alert('@ViewBag.EmailSend');
            };
                </script>
            }
        </div>
    </div>

                            
