@model SocietyOfAC.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<h2>Contact</h2>
<script src = "~/bundles/jqueryval"></script>
<section style="margin-top:130px">
    <div class="container">

        <div class="row">
            <div class="col-sm-12 col-md-offset-2 col-md-6">
                <div class="thumbnail info-thumbnail color-white" style="background-color:#00a885; height:530px">
                    <div class="caption">
                     
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()


                            <h4 style="color:white">Send your comments.</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <form>


                                <div class="form-group">
                                    <div id="maincolor" style="margin-top:15px">
                                       
                                        @Html.LabelFor(model => model.FromName, htmlAttributes: new { @class = "control-label ", @style = "margin-top:20px" })
                                    </div>
                                    <div class="col-sm-12 col-md-12 ">
                                        @Html.EditorFor(model => model.FromName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FromName, "", new { @class = "text-danger", @style = "color:black" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div id="maincolor" style="margin-top:15px">
                                        @Html.LabelFor(model => model.FromEmail, htmlAttributes: new { @class = "control-label ", @style = "margin-top:20px" })
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        @Html.EditorFor(model => model.FromEmail, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FromEmail, "", new { @class = "text-danger", @style = "color:black" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div id="maincolor" style="margin-top:15px">
                                        @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label ", @style = "margin-top:20px" })
                                    </div>
                                    <div class="col-sm-12 col-md-12">
                                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger", @style = "color:black" })
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-default" style="border-color:white;margin-top:30px" id="butt" value="Send" />
                                </form>
                        }
                    </div>
                </div>
            </div>





        </div>
    </div>
</section>